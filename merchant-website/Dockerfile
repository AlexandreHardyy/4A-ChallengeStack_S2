FROM node:18

WORKDIR /usr/src/app

COPY package*.json ./

ARG CLIENT_TOKEN
ENV CLIENT_TOKEN ${CLIENT_TOKEN}

ARG BASEURL_SERVER
ENV BASEURL_SERVER ${BASEURL_SERVER}

ARG BASEURL_MERCHANT_SERVER
ENV BASEURL_MERCHANT_SERVER ${BASEURL_MERCHANT_SERVER}

RUN npm install

COPY . .

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]